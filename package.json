{
  "name": "@chabaduniverse/auth",
  "version": "1.0.0",
  "type": "module",
  "description": "Pluggable authentication library for ChabadUniverse applications with multiple provider support",
  "keywords": [
    "authentication",
    "auth",
    "react",
    "jwt",
    "oauth",
    "sso",
    "chabaduniverse",
    "merkos"
  ],
  "author": "ChabadUniverse Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/merkos-302/chabaduniverse-auth.git"
  },
  "bugs": {
    "url": "https://github.com/merkos-302/chabaduniverse-auth/issues"
  },
  "homepage": "https://github.com/merkos-302/chabaduniverse-auth#readme",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./react": {
      "types": "./dist/types/react/index.d.ts",
      "import": "./dist/esm/react/index.js",
      "require": "./dist/cjs/react/index.js"
    },
    "./adapters": {
      "types": "./dist/types/adapters/index.d.ts",
      "import": "./dist/esm/adapters/index.js",
      "require": "./dist/cjs/adapters/index.js"
    },
    "./database": {
      "types": "./dist/types/database/index.d.ts",
      "import": "./dist/esm/database/index.js",
      "require": "./dist/cjs/database/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "npm run clean && npm run build:types && npm run build:bundle",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build:bundle": "rollup -c",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run test && npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "jose": "^5.9.6",
    "mongoose": "^9.1.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.28.1",
    "rollup-plugin-dts": "^6.1.1",
    "size-limit": "^11.1.6",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  },
  "size-limit": [
    {
      "path": "dist/esm/index.js",
      "limit": "15 KB"
    },
    {
      "path": "dist/esm/react/index.js",
      "limit": "5 KB"
    }
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
